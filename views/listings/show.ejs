<% layout("/layout/boilerplate") -%>

<div class="row">
        <div class="col-8 offset-3">
            <h2 class="mt-3"><%= listing.title %></h2>
        </div>

    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="card_image" >
        <div class="card-body">
          <p class="card-text">
            <b> </b><br>
            <%= listing.description %> <br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.location %> <br>
            <%= listing.country %> <br>
        </p>
        </div>
    </div>

    <div class="btns mb-3">
        <a href="http://localhost:8080/listings/<%= listing._id %>/edit" class="btn btn-success col-1 offset-3"> Edit</a>

        <form method="post", action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-5">DESTROY</button> <br>
        </form>
        
    </div>
    
    <div class = "col-8 offset-3">
        <hr>
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
        <h4>Leave A Review:</h4>
       
        <div>
            <label for="rating"  class="form-label mt-3">Rating </label>
            <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-range">
        </div>

        <div>
            <label for="comment" class="form-label">Comment</label>
            <textarea 
            name="review[comment]" 
            id="comment"
            class="form-control"
            required
            ></textarea>
            <div class="invalid-feedback">Please add a comment.</div>
        </div>
        <br>

        <button class="btn btn-outline-dark mb-3"> Submit </button>
    
         </form>

         <p><b>All Reviews</b></p>
        <div class="row">
            <% for(reviews of listing.reviews){ %>
            <div class="card col-5 row-3 ms-3 mb-3">
                <h5 class="card-title">John Doe</h5>
                <p class="card-text"><%= reviews.comment %></p>
                <p class="card-text"><%= reviews.rating %> star</p>
                <form action="/listings/<%= listing._id %>/reviews/<%= reviews._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger mb-3">Delete</button>
                </form>
            </div>
            <% } %>
            
        </div> 
           
       





    </div>
    
       
   
</div>


